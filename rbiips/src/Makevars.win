PKG_CPPFLAGS = -I"$(BOOST_ROOT)" -I"$(BIIPS_ROOT)/include/biips/core" -I"$(BIIPS_ROOT)/include/biips/base" -I"$(BIIPS_ROOT)/include/biips/compiler"

## Use the R_HOME indirection to support installations of multiple R version
PKG_LIBS = $(shell "${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" -e "Rcpp:::LdFlags()") -L"$(BIIPS_ROOT)\lib" -lBiipsCore -lBiipsBase -lBiipsCompiler

