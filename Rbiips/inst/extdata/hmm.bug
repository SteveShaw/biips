var x_true[tmax], x[tmax], y[tmax]

data
{
  x_true[1] ~ dnorm(0, 1)
  y[1] ~ dnorm(x_true[1], 10)
  for (t in 2:tmax)
  {
    x_true[t] ~ dnorm(x_true[t-1], 1)
    y[t] ~ dnorm(x_true[t], 10)
  }
}

model
{
  logtau ~ dunif(-3, 3)
  x[1] ~ dnorm(0, 1)
  y[1] ~ dnorm(x[1], exp(logtau))
  for (t in 2:tmax)
  {
    x[t] ~ dnorm(x[t-1], 1)
    y[t] ~ dnorm(x[t], exp(logtau))
  }
}
